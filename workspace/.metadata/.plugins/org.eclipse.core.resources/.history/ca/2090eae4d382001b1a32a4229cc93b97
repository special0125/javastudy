package ex07_recursive;

public class Calculator {
	
	// 역할 : n! 값을 반환합니다.
	// 3! (3팩토리얼) == 1 * 2 * 3
	public int getFactorial(int n) {
		// return 3 * 2 * 1;
		if(n == 1) {
			return 1;
		}else {
			return n * getFactorial(n - 1);
		}
		
		
	}
}

/*

5 * get(4){4 * get(3){3 * get(2){2 * get(1){return 1)}}}}